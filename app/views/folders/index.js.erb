$('.modal#addFolder<%=@folder.id%>ToSharedList').on('hidden.bs.modal', event => {
  $('.modal#addFolder<%=@folder.id%>ToSharedList form#new_shared_list').replaceWith("<%= j render('shared_lists/create_and_attach_folder_form', folder: @folder, shared_list: SharedList.new) %>")
