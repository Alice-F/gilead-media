<!-- Modal -->
<div class="modal fade" id="addFolderToSharedFolder<%= folder.id %>" tabindex="-1" role="dialog" aria-labelledby="addFolderToSharedFolder<%= folder.id %>Title" aria-hidden="true" data-target='show-modal.modalId' data-reload-on-hide = "true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addFolderToSharedFolder<%= folder.id %>Title">Envoyer <%= folder.title %> à</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if policy(shared_folder).create? %>
          <% if shared_folder.errors.messages[:code].present? %>
            <p class="alert-warning p-3">
              Une erreur s'est produite dans la génération du code associé à la liste de partage. Veuillez valider à nouveau votre saisie.
            </p>
          <% end %>
          <%= render 'shared_folders/form', folder: folder, shared_folder: shared_folder %>
        <% end %>
      </div>
    </div>
  </div>
</div>
